{
    "name": "hrms-client",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
      "axios": "^1.3.4",                        # 用于发起 HTTP 请求的库
      "react": "^18.2.0",                       # React 核心库
      "react-dom": "^18.2.0",                   # React DOM 渲染
      "react-router-dom": "^6.13.0",            # 用于管理页面路由
      "react-scripts": "5.0.1"                  # Create React App 脚本工具
    },
    "scripts": {
      "start": "react-scripts start",           # 启动开发服务器
      "build": "react-scripts build",           # 打包生产环境
      "test": "react-scripts test",             # 运行测试
      "eject": "react-scripts eject"            # 弹出配置（如果需要自定义 webpack 配置）
    },
    "eslintConfig": {
      "extends": [
        "react-app",                            # 使用 Create React App 默认的 ESLint 配置
        "react-app/jest"
      ]
    },
    "browserslist": {
      "production": [
        ">0.2%",                               # 生产环境支持的最低浏览器市场份额
        "not dead",                            # 不支持死浏览器
        "not op_mini all"                      # 不支持 Opera Mini
      ],
      "development": [
        "last 1 chrome version",               # 开发环境要求最新版本的 Chrome
        "last 1 firefox version",              # 开发环境要求最新版本的 Firefox
        "last 1 safari version"                # 开发环境要求最新版本的 Safari
      ]
    }
  }
  